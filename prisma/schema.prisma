// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  username    String
  fullname    String
  facebook    String?
  phone       String
  studentno   String
  course      String
  yearsection String
  password    String
  verified    Boolean @default(false)
}

model Tokens {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  token String
}

model Resets {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  token String
}
